<% if user_signed_in? %>
  window.currentUser = <%= current_user %>
  <div>Hello, <%= current_user.username %></div>
  <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
<% else %>
<%= link_to "Login", new_user_session_path, :method => :new %>
<%= link_to "Signup", new_user_registration_path, :method => :new %>
<% end %>

<div id="root"></div>
